{
  "plugins": ["plugins/markdown"],
  "recurseDepth": 10,
  "source":
  {
    "exclude": ["modules/_API.js", "modules/_OBS.js"]
  },
  "sourceType": "module",
  "tags":
  {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc","closure"]
  },
  "templates":
  {
    "default":
    {
      "outputSourceFiles": false,
      "includeDate": false
    },
    "cleverLinks": true
  },
  "opts":
  {
    "template": "./template",
    "theme_opts":
    {
      "title": "Widget Tools",
      "meta":
      [
        {
          "name": "author",
          "content": "Reboot0"
        },
        {
          "name": "description",
          "content": "Documentation for the StreamElements widget tools"
        }
      ],
      "menu":
      [
        {
          "title": "Getting Started",
          "link":  "./index.html",
          "id":    "getting-started"
        },
        {
          "title":  "Overlay Editor Docs",
          "link":   "https://github.com/StreamElements/widgets/tree/master/docs",
          "target": "_blank",
          "class":  "external-link",
          "id":     "editor-docs"
        },
        {
          "title":  "SE API Docs",
          "link":   "https://dev.streamelements.com/docs/api-docs/bcd899e16ac9a-se-api-docs",
          "target": "_blank",
          "class":  "external-link",
          "id":     "api-docs"
        },
        {
          "title":  "Connection Guides",
          "link":   "https://dev.streamelements.com/docs/api-docs/ZG9jOjE4MDk3Njc-o-auth2",
          "target": "_blank",
          "class":  "external-link",
          "id":     "connection-guides"
        }
      ],
      "search":
      {
        "include_matches": true
      },
      "overlay_scrollbar":
      {
        "sidebar":
        {
          "className": "os-theme-block-light",
          "scrollbars":
          {
            "autoHide": "never"
          }
        },
        "body":
        {
          "className": "os-theme-block-light",
          "scrollbars":
          {
            "autoHide": "scroll"
          }
        }
      }
    }
  }
}
